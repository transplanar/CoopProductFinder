<h1>Results</h1>

<div class="results">
    <% unless @results.blank? %>
      <h3>Results</h3>

      <% @results.each do |group, matches| %>
      <h1><%= group.map{|e| e.capitalize}.join(' | ') %></h1>
      <div>
        <% matches.each do |match| %>
          <%= match[:item][:name] %>
          <%= match[:item][:code] %>
          <br />
        <% end %>
      </div>
      <% end %>
    <% else %>
      <br>No results found.
    <% end %>

</div>


