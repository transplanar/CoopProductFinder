<div class="results">
    <% unless results.blank? %>
      <h3>Filtered Card Selection</h3>
    <% else %>
      <br>No results found.
    <% end %>

    <% results.each do |r| %>
      <% if r.class == Array %>
        <% r.each do |hsh| %>1
          <h1><%= hsh[:matches][:columns].join(' > ') %></h1>
          <h3><%= hsh[:matches][:terms] %></h3>
          <% hsh[:cards].each do |card| %>
            <%= link_to image_tag(card.image_url, class: 'card_image'), assign_card_path(slot, card), method: :post, remote: true %>
          <% end %>
        <% end %>
      <% else %>
        <h1><%= r[:matches][:columns].join(' > ') %></h1>
        <h3><%= r[:matches][:terms] %></h3>
        <% r[:cards].each do |card| %>
          <%= link_to image_tag(card.image_url, class: 'card_image'), assign_card_path(slot, card), method: :post, remote: true %>
        <% end %>
      <% end %>
    <% end %>
</div>
