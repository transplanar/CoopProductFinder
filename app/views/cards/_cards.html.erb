<div class="results">
    <% unless results.blank? %>
      <h3>Filtered Card Selection</h3>
    <% else %>
      <br>No results found.
    <% end %>

    <% results.each do |group, matches| %>
      <h1><%= group %></h1>
      <% matches.each do |match| %>
        <%= link_to image_tag(match[:card][:image_url], class: 'card_image'), assign_card_path(slot, match[:card]), method: :post, remote: true %>
        <%= match[:terms] %>
      <% end %>
    <% end %>
</div>
